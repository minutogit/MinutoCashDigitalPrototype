<DashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20), dp(0)

        # Weißer Bereich
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            padding: dp(0), dp(10)

            MDLabel:
                text: root.title
                size_hint_x: 0.9
                font_size: '20sp'
                bold: True
                #text_size: self.width, None

            MDIconButton:
                icon: "account-circle"
                user_font_size: "32sp"
                on_release: app.root.current = 'user_info'

         # Blue area
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(120)  # Fixed height for the blue area
            padding: dp(20)
            canvas.before:
                Color:
                    rgba: 0.2, 0.4, 0.8, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15, 15, 15, 15]

            MDLabel:
                text: 'Kontostand'
                theme_text_color: "Custom"
                color: 1, 1, 1, 1  # White text
                font_size: '20sp'
                bold: True
                size_hint_y: None
                height: dp(30)  # Height for "Kontostand" label
                text_size: self.width, None

            Label:
                text: 'Andere Minuto: ' + str(root.balance_other_vouchers)
                color: 1, 1, 1, 1  # White text
                size_hint_y: None
                height: dp(30)  # Height for the first additional label
                text_size: self.width, None

            Label:
                text: 'Eigene Minuto: ' + str(root.balance_own_vouchers)
                color: 1, 1, 1, 1  # White text
                size_hint_y: None
                height: dp(30)  # Height for the second additional label
                text_size: self.width, None


        # white area
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background
                    Rectangle:
                        size: self.size
                        pos: self.pos



<PasswordRecovery>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height

        Label:
            text: "eMinuto Login"
            color: 0, 0, 0, 1
            size_hint_y: None
            height: dp(48)
            font_size: '20sp'
            halign: 'center'
            pos_hint: {'center_x': 0.5}

<ProfileLoginScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height

            Label:
                text: "eMinuto Login"
                color: 0, 0, 0, 1
                size_hint_y: None
                height: dp(48)
                font_size: '20sp'
                halign: 'center'
                pos_hint: {'center_x': 0.5}

            MDTextField:
                id: password
                hint_text: 'Passwort'
                mode: 'round'
                password: True
                size_hint_x: None
                width: min(200, self.parent.width * 0.9)
                size_hint_y: None
                height: dp(100)
                pos_hint: {'center_x': 0.5}

            MDTextButton:
                text: "[u]Passwort vergessen?[/u]"
                markup: True
                font_style: 'Caption'
                pos_hint: {'center_x': 0.5}
                on_release: app.root.current = 'password_recovery'  # oder entsprechende Funktion
                valign: 'top'
                size_hint_y: None
                height: dp(20)  # Setzen Sie eine spezifische Höhe
                padding: 0, dp(5), 0, 0


            Widget:  # Platzhalter für Abstand
                size_hint_y: None
                height: dp(20)

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                size_hint_y: None
                height: dp(48)
                MDRaisedButton:
                    text: 'Login'
                    on_release: root.on_login_pressed()
                    size_hint: None, None
                    width: 200
                    height: dp(48)

<PasswordRecoveryScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height

            MDBoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(50)
                padding: dp(0), dp(10)

                MDIconButton:
                    icon: "arrow-left"
                    user_font_size: "24sp"
                    pos_hint: {"center_y": .5}
                    theme_text_color: "Custom"
                    on_release: root.go_back_to_profile_login()
                MDLabel:
                    text: "Neues Passwort setzen"
                    font_style: "H5"
                    size_hint_x: None
                    width: self.texture_size[0]
                    theme_text_color: "Custom"
                    valign: "top"
                    adaptive_size: True

            MDTextField:
                id: seed_field
                hint_text: 'Seed eingeben'
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(48)
                multiline: True
                pos_hint: {'center_x': 0.5}
                mode: 'rectangle'

            Widget:
                size_hint_y: None
                height: dp(20)

            MDTextField:
                id: password
                hint_text: 'Neues Passwort'
                password: True
                size_hint_y: None
                height: dp(100)
                pos_hint: {'center_x': 0.5}
                mode: 'round'
                password: True
                size_hint_x: None
                width: min(200, self.parent.width * 0.9)


            Widget:
                size_hint_y: None
                height: dp(20)

            MDTextField:
                id: confirm_password
                hint_text: 'Passwort wiederholen'
                password: True
                height: dp(100)
                pos_hint: {'center_x': 0.5}
                mode: 'round'
                password: True
                size_hint_x: None
                width: min(200, self.parent.width * 0.9)
                padding: 50, 50, 50, 50


            Widget: # for space over next button
                size_hint_y: None
                height: dp(20)
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                size_hint_y: None
                height: dp(48)
                MDRaisedButton:
                    text: 'Neues Passwort setzen'
                    disabled: not (seed_field.text != "" and password.text == confirm_password.text and root.is_password_valid(password.text))
                    on_release: root.set_new_password_pressed(seed_field.text, password.text)
                    size_hint: None, None
                    width: 200
                    height: dp(48)


<NoProfileStartupScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1  # Hellgrauer Hintergrund für Sichtbarkeit
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            padding: dp(20), dp(20)
            size_hint: None, None
            width: self.minimum_width
            height: self.minimum_height
            Label:
                text: 'Kein Profil vorhanden.'
                color: 0, 0, 0, 1  # Schwarzer Text
                size_hint: None, None
                size: self.texture_size
            MDRaisedButton:
                text: 'Profil erstellen'
                on_release: app.root.current = 'generate_new_user_profile'
                size_hint: None, None
                height: dp(48)
                width: 200


<GenerateNewUserProfileScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height

            MDTextField:
                id: first_name
                hint_text: 'Vorname'
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(48)
                multiline: True
                pos_hint: {'center_x': 0.5}

            MDTextField:
                id: last_name
                hint_text: 'Nachname'
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(48)
                multiline: True
                pos_hint: {'center_x': 0.5}

            MDTextField:
                id: organization
                hint_text: 'Organisation'
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(48)
                multiline: True
                pos_hint: {'center_x': 0.5}

            MDTextField:
                id: seed_field
                hint_text: 'Seed'
                readonly: True
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(48)
                multiline: True
                pos_hint: {'center_x': 0.5}

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                size_hint_y: None
                height: dp(48)
                MDRaisedButton:
                    text: 'Neuer Seed'
                    on_release: root.generate_seed()
                    size_hint: None, None
                    width: 200
                    height: dp(48)

            MDTextField:
                id: confirm_seed
                hint_text: 'Seed wiederholen'
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(48)
                multiline: True
                pos_hint: {'center_x': 0.5}
            Label:
                text: "Der Seed ist korrekt" if confirm_seed.text == seed_field.text and confirm_seed.text != '' else "Der Seed stimmt nicht überein" if confirm_seed.text != '' else ""
                size_hint_y: None
                height: dp(20)
                color: 0, 0, 0, 1

            MDTextField:
                id: password
                hint_text: 'Passwort'
                password: True
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(48)
                pos_hint: {'center_x': 0.5}

            MDTextField:
                id: confirm_password
                hint_text: 'Passwort bestätigen'
                password: True
                size_hint_x: 0.9
                size_hint_y: None
                height: dp(48)
                pos_hint: {'center_x': 0.5}
            Label:
                text: "Das Passwort ist korrekt" if password.text == confirm_password.text and password.text != '' else "Das Passwort stimmt nicht überein" if confirm_password.text != '' else ""
                size_hint_y: None
                height: dp(20)
                color: 0, 0, 0, 1

            Widget: # for space over next button
                size_hint_y: None
                height: dp(20)
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                size_hint_y: None
                height: dp(48)
                MDRaisedButton:
                    text: 'Profil Erstellen'
                    disabled: not (confirm_seed.text == seed_field.text and password.text == confirm_password.text and root.is_password_valid(password.text))
                    on_release: root.generate_new_user_profile(first_name.text, last_name.text, organization.text, seed_field.text, password.text); app.root.current = 'dashboard'
                    size_hint: None, None
                    width: 200
                    height: dp(48)







